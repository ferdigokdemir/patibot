# Google Gemini API Key (ÜCRETSİZ - ZORUNLU)
# https://makersuite.google.com/app/apikey adresinden alınabilir
GEMINI_API_KEY=your_gemini_api_key

# PatiBot Twitter Kullanıcı Adı
PATIBOT_USERNAME=PatiBot

# Takip Edilecek Haber Hesapları
# Twitter kullanıcı adları (@ olmadan, virgülle ayrılmış)
NEWS_ACCOUNTS=GuvenliSehirler,BulutGulcuN,aslihan_ercan,NiluferSabuncu,SehirlerGuvenli

# Arama Parametreleri (opsiyonel - haber hesapları kullanılmazsa)
SEARCH_KEYWORDS=köpek saldırısı,sokak hayvanı saldırısı,köpek saldırdı

# Tarama Ayarları
SCAN_INTERVAL_MINUTES=30
MAX_TWEETS_PER_ACCOUNT=20
TOTAL_MAX_TWEETS=100

# Veritabanı
DATABASE_PATH=./data/patibot.db

# Debug Mode
DEBUG=true

# Headless Mode (false = browser görünür)
HEADLESS=false

# Haftalık Rapor Otomasyonu
ENABLE_WEEKLY_REPORT=true
WEEKLY_REPORT_SCHEDULE=0 9 * * 1  # Her Pazartesi 09:00 (cron formatı)

